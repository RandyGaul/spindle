# .clang-format — Cute Framework style C
BasedOnStyle: LLVM
Language: Cpp           # clang-format uses "Cpp" for C/C++

# Indentation / tabs
UseTab: Always          # tabs for indentation
IndentWidth: 4
TabWidth: 4
ContinuationIndentWidth: 8
IndentCaseLabels: false
IndentGotoLabels: false

# Line wrapping
ColumnLimit: 0          # never hard-wrap; keep author-chosen breaks

# Braces & layout
BreakBeforeBraces: Custom
BraceWrapping:
  AfterControlStatement: false   # if/for/while … { on same line
  BeforeElse: false              # "} else {" on same line
  BeforeCatch: false
  AfterFunction: true            # functions put { on next line
  AfterClass: true               # classes/structs/enums put { on next line
  AfterStruct: true
  AfterEnum: true
  SplitEmptyFunction: false
  SplitEmptyRecord: false
  SplitEmptyNamespace: false
AllowShortIfStatementsOnASingleLine: true
AllowShortBlocksOnASingleLine: true
AllowShortFunctionsOnASingleLine: true
AllowShortCaseLabelsOnASingleLine: true
AllowShortLoopsOnASingleLine: true

# Spacing
SpaceBeforeParens: ControlStatements   # "if (" but "func("
SpaceAroundPointerQualifiers: Default
PointerAlignment: Left                 # "int* p"
DerivePointerAlignment: false
SpaceAfterCStyleCast: false
SpacesInCStyleCastParentheses: false
SpacesInParentheses: false
SpacesInSquareBrackets: false
SpaceBeforeSquareBrackets: false
SpaceBeforeRangeBasedForLoopColon: false
SpaceInEmptyBlock: false
SpaceBeforeAssignmentOperators: true

# Don’t try to vertically align things
AlignAfterOpenBracket: DontAlign
AlignConsecutiveAssignments: false
AlignConsecutiveDeclarations: false
AlignConsecutiveMacros: false
AlignEscapedNewlines: DontAlign
AlignOperands: false
AlignTrailingComments: false

# Calls/initializers (prefer compact, no forced one-per-line)
BinPackArguments: true
BinPackParameters: true
Cpp11BracedListStyle: false

# Includes
SortIncludes: false
IncludeBlocks: Preserve

# Misc
KeepEmptyLinesAtTheStartOfBlocks: false
MaxEmptyLinesToKeep: 1
InsertTrailingCommas: None
